<div class="category-slider page-width">
  <h2 class="category-slider__heading heading-underline">{{ section.settings.heading }}</h2>
  <div class="swiper swiper-{{ section.id }} swiper-sbc">
    <div class="swiper-wrapper swiper-sbc-wrapper">
      {% for block in section.blocks %}
        <div class="category-slider__item swiper-slide">
          <a href="{{ block.settings.add_url }}" class="category-slider__link">
          <div class="sbc-image-text">
          {% if block.settings.add_image %}
          {% liquid
            assign sizes = '100vw'
            assign widths = '190, 375'
          %}
          {{
            block.settings.add_image
            | image_url: width: 190
            | image_tag: class: 'sbc-image', sizes: sizes, widths: widths
          }}
          {% endif %}
          <div class="category-slider__title">
            <div class="category-slider__title-text">{{ block.settings.category_name }}</div>
          </div>
        </div>
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
  <!-- Add Navigation -->
  <div class="swiper-next">{{ 'sbc-next.svg' | inline_asset_content}}</div>
  <div class="swiper-prev">{{ 'sbc-prev.svg' | inline_asset_content}}</div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    let sbcSwiper{{ section.id | remove: '-'}} = new Swiper('.swiper-{{ section.id }}', {
      slidesPerView: 2,
      spaceBetween: 32,
      navigation: {
        nextEl: '.swiper-next',
        prevEl: '.swiper-prev',
      },
      breakpoints: {
        100: {
          slidesPerView: 2,
          spaceBetween: 15,
        },
        768: {
          slidesPerView: 4,
        },
        1024: {
          slidesPerView: 5,
        },
        1440: {
          slidesPerView: 7,
        }
      },
    });
  });
</script>
{% schema %}
{
  "name": "Shop by Category",
  "class": "shop-by-cate",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Category",
      "placeholder": "Add Your Heading"
    }
  ],
  "blocks": [
    {
      "name": "Category",
      "type": "category",
      "settings": [
        {
          "type": "text",
          "id": "category_name",
          "label": "Category Name"
        },
        {
          "type": "image_picker",
          "id": "add_image",
          "label": "Add Image"
        },
        {
          "type": "url",
          "id": "add_url",
          "label": "Add URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Category"
    }
  ]
}
{% endschema %}